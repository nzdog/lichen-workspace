{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts.schema.json",
  "title": "Lichen Protocol Contracts",
  "description": "Root schema for validating all contract files in /contracts (rooms, gates, services, orchestrator).",
  "type": "object",
  "required": ["id", "type", "description", "inputs", "outputs"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the contract, e.g. room/entry, gate/integrity_linter."
    },
    "type": {
      "type": "string",
      "enum": ["room", "gate", "service", "orchestrator"],
      "description": "Contract category."
    },
    "description": {
      "type": "string",
      "description": "Plain-language description of what this contract governs."
    },
    "inputs": {
      "type": "array",
      "description": "Expected input signals or payloads.",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "required": { "type": "boolean", "default": false },
          "description": { "type": "string" }
        }
      }
    },
    "outputs": {
      "type": "array",
      "description": "Expected output signals or payloads.",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "options": {
      "type": "object",
      "description": "Optional contract-specific settings (e.g., diagnostics.enabled).",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}