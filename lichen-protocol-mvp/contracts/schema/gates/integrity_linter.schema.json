{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "integrity_linter.schema.json",
  "title": "Gate: Integrity Linter",
  "type": "object",
  "required": ["gate_id", "title", "version", "purpose", "checks", "inputs", "outputs", "on_failure"],
  "properties": {
    "gate_id": { "const": "integrity_linter" },
    "title": { "type": "string" },
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "purpose": { "type": "string" },
    "checks": {
      "type": "object",
      "required": ["prohibited", "required_alignment"],
      "properties": {
        "prohibited": { "type": "array", "items": { "type": "string" } },
        "required_alignment": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "inputs": { "type": "object", "required": ["raw_text"], "properties": { "raw_text": { "type": "string" } }, "additionalProperties": false },
    "outputs": {
      "type": "object",
      "required": ["lint_pass", "issues"],
      "properties": {
        "lint_pass": { "type": "boolean" },
        "issues": { "type": "array", "items": { "type": "object", "required": ["rule", "reason"], "properties": {
          "rule": { "type": "string" }, "reason": { "type": "string" }
        }, "additionalProperties": false } }
      },
      "additionalProperties": false
    },
    "on_failure": {
      "type": "object",
      "required": ["action", "max_attempts", "fallback"],
      "properties": {
        "action": { "type": "string", "enum": ["regenerate"] },
        "max_attempts": { "type": "integer", "minimum": 0 },
        "fallback": { "const": "refusal_library" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}